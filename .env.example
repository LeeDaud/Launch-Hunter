PORT=3000
DB_PATH=./tracker.db

# Base RPC
BASE_HTTP_RPC=https://mainnet.base.org
BASE_WS_RPC=wss://mainnet.base.org
USE_WS_NEW_HEADS=true

# REQUIRED: fill VIRTUAL token contract on Base
VIRTUAL_TOKEN_ADDRESS=

# Optional extra counterparties, comma separated
COUNTERPARTY_TOKEN_ADDRESSES=

# Tracker
BACKFILL_BLOCKS=8000
LOG_CHUNK_SIZE=1200
REPLAY_RECENT_BLOCKS=24
POLLING_INTERVAL_MS=2500
UPDATE_THROTTLE_MS=2000

# Metric mode: token_received or virtual_spent
METRIC_MODE=token_received

# Rule: minute t > first, minute t+1 > second
RULE_FIRST_THRESHOLD=3000
RULE_SECOND_THRESHOLD=6000
RULE_COOLDOWN_MINUTES=10

# RPC retry
MAX_RPC_RETRIES=5
RPC_BASE_BACKOFF_MS=400
